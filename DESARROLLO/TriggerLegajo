use bdd2;
DELIMITER $$
create trigger legajo_bi before insert on legajo for each row 
begin
set @mi_tabla='legajo';
set @hay_dato=0;
call numeradorCero(@mi_tabla,@hay_dato);
if(select @hay_dato !=0) then
begin
insert into legajo(id_legajo)
select siguiente
from numerador
where numerador.tabla='legajo';
update table numerador
set siguiente=siguiente+1
where numerador.tabla='legajo';
end;
else
insert into numerador(tabla, siguiente)
values('legajo',1);
end if;
end;
$$
DELIMITER ;
